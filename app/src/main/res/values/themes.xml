<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MCashier" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="statusBarBackground">@color/background_light</item>
        <item name="statusBarForeground">@color/text_normal</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/statusBarBackground</item>

        <item name="backgroundColor">@color/background</item>
        <item name="tint">@color/tint</item>

        <item name="colorControlNormal">@color/control_light</item>
        <item name="colorControlActivated">@color/tint</item>

        <item name="fontFamily">@font/futurapt_fonts</item>
        <item name="fontWeight">@integer/font_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarAppearance</item>
        <!--        <item name="android:preferenceScreenStyle">@style/PreferenceScreenStyle</item>-->
        <!--        <item name="android:preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>-->
        <item name="android:preferenceStyle">@style/PreferenceStyle</item>
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <!--        <item name="android:preferenceInformationStyle">@style/PreferenceInformationStyle</item>-->
        <!--        <item name="android:preferenceLayoutChild">@style/PreferenceLayoutChildStyle</item>-->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!--        <item name="android:editTextPreferenceStyle">@style/PreferenceEditTextStyle</item>-->


    </style>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.MCashier.RegisterActivity" parent="Theme.MCashier">
        <item name="statusBarBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface" >
        <item name="colorPrimary">@color/background_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="tint">@color/tint</item>
    </style>
    <style name="Theme.MCashier.BasicCaption" parent="Theme.MCashier">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/font_500</item>
    </style>
    <style name="Theme.MCashier.BasicDescription" parent="Theme.MCashier">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/font_300</item>
    </style>

    <!-- ***** ACTION BAR ***** -->
    <style name="ActionBarAppearance" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/background_light</item>
        <item name="android:backgroundStacked">@color/background_light</item>
        <item name="android:backgroundSplit">@color/background_light</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/background_light</item>
        <item name="backgroundStacked">@color/background_light</item>
        <item name="backgroundSplit">@color/background_light</item>
    </style>
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">200</item>
        <item name="android:textColor">@color/background_semi_light</item>
    </style>
    <!-- ***** END ACTION BAR ***** -->
    <!-- ***** PREFERENCE CATEGORY ***** -->
    <style name="PreferenceScreenStyle" parent="Theme.Mcashier"></style>
    <style name="PreferenceStyle" parent="Theme.Mcashier">
        <item name="background">@color/background</item>
    </style>
    <style name="PreferenceFragmentStyle" parent="Theme.Mcashier">
        <item name="android:dividerHeight">0dp</item>
    </style>
    <style name="PreferenceCategoryStyle" parent="Theme.Mcashier">
        <item name="android:layout">@layout/custom_preference_category</item>
        <item name="backgroundColor">@color/background_light</item>
    </style>
    <style name="PreferenceInformationStyle" parent="Theme.Mcashier">

    </style>
    <style name="PreferenceLayoutChildStyle" parent="Theme.Mcashier"></style>
    <style name="PreferenceEditTextStyle" parent="Theme.Mcashier">
<!--        <item name="android:layout">@layout/custom_preference_edittexttext</item>-->
    </style>
    <!-- ***** END PREFERENCE CATEGORY ***** -->
    <!-- ***** ANIMATIONS ***** -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <!-- ***** END ANIMATIONS ***** -->
</resources>