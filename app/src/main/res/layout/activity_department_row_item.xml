<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UI.Activities.DepartmentRowItemActivity">

    <TextView
        android:id="@+id/departmentlist_row_caption"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="18dp"
        android:textColor="@color/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/departmentlist_row_description"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="@color/text_gray"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/departmentlist_row_code"
        app:layout_constraintStart_toStartOf="@+id/departmentlist_row_caption"
        app:layout_constraintTop_toBottomOf="@+id/departmentlist_row_caption" />

    <View
        android:id="@+id/departmentlist_row_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/text_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departmentlist_row_description" />

    <TextView
        android:id="@+id/departmentlist_row_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_gray"
        android:textSize="16dp"
        android:textFontWeight="@integer/font_500"
        app:layout_constraintBottom_toBottomOf="@+id/departmentlist_row_description"
        app:layout_constraintEnd_toEndOf="@+id/departmentlist_row_caption"
        app:layout_constraintTop_toTopOf="@+id/departmentlist_row_description" />
</androidx.constraintlayout.widget.ConstraintLayout>