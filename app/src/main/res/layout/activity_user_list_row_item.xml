<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="0dp"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/row_userlist_image_user"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/icon_user"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_userlist_text_username" />

    <TextView
        android:id="@+id/row_userlist_text_username"
        style="@style/Theme.MCashier.BasicCaption"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:text="@string/cap_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_userlist_image_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_userlist_text_stateType"
        style="@style/Theme.MCashier.BasicDescription"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="@string/cap_empty"
        app:layout_constraintEnd_toEndOf="@+id/row_userlist_text_username"
        app:layout_constraintStart_toStartOf="@+id/row_userlist_text_username"
        app:layout_constraintTop_toBottomOf="@+id/row_userlist_text_username" />

    <TextView
        android:id="@+id/row_userlist_text_department"
        style="@style/Theme.MCashier.BasicDescription"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:gravity="center_vertical"
        android:text="@string/cap_empty"
        app:layout_constraintEnd_toEndOf="@+id/row_userlist_text_stateType"
        app:layout_constraintStart_toStartOf="@+id/row_userlist_text_stateType"
        app:layout_constraintTop_toBottomOf="@+id/row_userlist_text_stateType" />

    <View
        android:id="@+id/row_userlist_view_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_userlist_text_department" />

</androidx.constraintlayout.widget.ConstraintLayout>